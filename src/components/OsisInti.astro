---
import { getCollection } from "astro:content";

// Fetch OSIS Data
const osisCollection = await getCollection("osis");
const osisData = osisCollection[0]?.data;

if (!osisData || !osisData.inti || osisData.inti.length === 0) {
    // Return nothing if there is no Inti data
    return;
}

const inti = osisData.inti;
---

<section class="py-16 px-6 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-16" data-animate="fade">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Pengurus OSIS Inti
            </h2>
            <div class="w-24 h-1 bg-secondary mx-auto rounded-full"></div>
        </div>

        <div
            class="grid grid-cols-2 lg:grid-cols-4 gap-2 md:gap-8"
            data-animate="fade"
        >
            {
                inti.map((member) => (
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 text-center hover:shadow-md transition-shadow hover:-translate-y-1 transform duration-300">
                        <div class="w-24 h-24 mx-auto rounded-full overflow-hidden mb-4 border-2 border-gray-100">
                            <img
                                src={
                                    member.avatar ||
                                    "/images/default-avatar.png"
                                }
                                alt={member.name}
                                class="w-full h-full object-cover"
                                loading="lazy"
                            />
                        </div>
                        <h4 class="text-sm sm:text-lg font-bold text-gray-900 mb-1">
                            {member.name}
                        </h4>
                        <p class="text-primary font-medium text-sm mb-3">
                            {member.role}
                        </p>

                        {member.instagram && (
                            <a
                                href={`https://instagram.com/${member.instagram}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-1.5 text-xs text-gray-500 hover:text-pink-600 transition-colors"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zm0 10.162a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                                </svg>
                                @{member.instagram}
                            </a>
                        )}
                    </div>
                ))
            }
        </div>

        <div class="text-center mt-12">
            <a
                href="/osis"
                class="btn btn-outline border-secondary text-secondary hover:bg-secondary hover:text-white px-8 py-3 rounded-md font-semibold transition-colors"
            >
                Lihat Susunan Lengkap
            </a>
        </div>
    </div>
</section>
